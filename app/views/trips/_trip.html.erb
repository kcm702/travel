<div class="box">
	<p><span class="trip_label">Trip:</span> <b><%= trip.description %></b>
	</p>
	<p><%= trip.start_date %>
		<% if trip.start_date != nil && trip.end_date != nil %> to <% end %>
		<%= trip.end_date %>
	</p>
	<p>
		<% if current_user == trip.user %>
			<%= link_to 'Show', trip %> |
			<%= link_to 'Edit', edit_trip_path(trip) %> |
			<%= link_to 'Destroy', trip, method: :delete, data: { confirm: 'Are you sure? Deleting a trip will delete all destinations and their associated accommodations, hot spots and notes.' } %>
		<% end %>
	</p>
</div>