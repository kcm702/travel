<%= simple_form_for(@hot_spot, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :category, collection: ["Food", "Entertainment", "Shopping", "Resource"], prompt: " " %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :hours %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :other %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
