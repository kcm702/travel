<%= simple_form_for(@hot_spot, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :category, collection: ["Food", "Entertainment", "Sights", "Shopping", "Resource"], prompt: " " %>
    <%= f.input :address %>
    <%= f.input :phone %>
    <%= f.input :hours %>
    <%= f.input :description %>
    <%= f.input :link %>
    <%= f.input :other, as: :text, input_html: { rows: '3'} %>
    <%= f.association :trip, collection: current_user.trips.all, label_method: :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
