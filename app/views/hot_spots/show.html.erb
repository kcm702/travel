<div class="row">
  <div class="span6 offset3">
    <div class="well">

      <p>
        <b>Title:</b>
        <%= @hot_spot.title %>
      </p>

      <p>
        <% if !@hot_spot.category.empty? %>
          <b>Category:</b>
          <%= @hot_spot.category %>
        <% end %>
      </p>

      <p>
        <% if !@hot_spot.address.empty? %>
          <b>Address:</b>
          <%= @hot_spot.address %>
        <% end %>
      </p>

      <p>
        <% if !@hot_spot.phone.empty? %>
          <b>Phone:</b>
          <%= @hot_spot.phone %>
        <% end %>
      </p>

      <p>
        <% if !@hot_spot.hours.empty? %>
          <b>Hours:</b>
          <%= @hot_spot.hours %>
        <% end %>
      </p>

      <p>
        <% if !@hot_spot.description.empty? %>
          <b>Description:</b>
          <%= @hot_spot.description %>
        <% end %>
      </p>

      <p>
        <% if !@hot_spot.link.empty? %>
          <b>Link:</b>
          <%= @hot_spot.link %>
        <% end %>
      </p>

      <p>
        <% if !@hot_spot.other.empty? %>
          <b>Other:</b>
          <%= @hot_spot.other %>
        <% end %>
      </p>

      <p>
        <em>Associated with <b><%= link_to @trip_description, @trip %></b><br />
          Created by <%= @hot_spot.user.username %></em>
      </p>

      <p>
        <% if current_user == @hot_spot.user %>
          <%= link_to 'Edit', edit_hot_spot_path(@hot_spot) %> |
          <%= link_to 'Back to Hot Spots', hot_spots_path %>
        <% end %>
      </p>
      
    </div>
  </div>
</div>
