<%= simple_form_for(@note, html: { class: "form-horizontal"}) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :subject %>
    <%= f.input :description, as: :text, input_html: {rows: '5'} %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>