<span class="label label-inverse nav_header">MY TRIPS</span>

<% if user_signed_in? %>

	<% @trips = current_user.trips %>

    <% @trips.each do |trip| %>
    <% trip.description %>
  	<% end %>

	<p>
		<!--<span class="lead">Trips</span>-->
		
		<span class="btn btn-nav btn-success btn-block">
			<%= link_to "All Trips", trips_path %>
		</span>
		
		<% @trips.each do |trip| %>
		<span class="btn btn-nav btn-primary btn-block">
			<%= link_to trip.description, trip %>
		</span>
		
		<% end %>

	</p>

	<p>
		<!--<span class="lead">Type</span>-->
		<span class="btn btn-nav btn-success btn-block">
			<%= link_to "All Types", all_path %>
		</span>
		<span class="btn btn-nav btn-info btn-block">
			<%= link_to "All Accommodations", accommodations_path %>
		</span> 
		<span class="btn btn-nav btn-info btn-block">
			<%= link_to "All Hot Spots", hot_spots_path %>
		</span>
		<span class="btn btn-nav btn-info btn-block">
			<%= link_to "All Notes", notes_path %>
		</span>
	</p>

<% else %>

	<p>Please <%= link_to "create an account", new_user_registration_path %> to get started or <%= link_to "sign in", new_user_session_path %>.</p>

<% end %>
