<div class="box">
	<p><span class="accommodation_label">Accommodation:</span> <b><%= accommodation.title %></b>
	</p>

	<p>
		<% if !accommodation.reservation_number.empty? %>
			<b>Reservation #</b> <%= accommodation.reservation_number %>
		<% end %>
	</p>

	<p>
		<b>Date:</b> <%= accommodation.booking_start_date %> to <%= accommodation.booking_end_date %>
	</p>

	<p>
		<% if !accommodation.phone.empty? %>
			<b>Phone:</b> <%= accommodation.phone %>
		<% end %>
	</P>

	<p>
		<% if !accommodation.price.empty? %>
			<b>Price:</b> <%= accommodation.price %>
		<% end %>
	</p>

	<p>
		<% if !accommodation.additional_info.empty? %>
			<b>Other:</b> <%= accommodation.additional_info %>
		<% end %>
	</p>
	<p>
		<% trip_idn = current_user.trips.find(accommodation.trip_id) %>
		<em>Associated with <b><%= link_to current_user.trips.find(trip_idn).description, trip_idn %></b></em>
	</p>

	<p>
		<% if current_user == accommodation.user %>
			<%= link_to 'Show', accommodation %> |
			<%= link_to 'Edit', edit_accommodation_path(accommodation) %> |
			<%= link_to 'Destroy', accommodation, method: :delete, data: { confirm: 'Are you sure?' } %>
		<% end %>
	</p>
</div>